<%= simple_form_for @user, validate: true do |f| %>
  <%= f.input :id_person, label: 'Numero de identificación', error: 'Numero de identificación es obligatorio', required: true %>
  <%= f.input :type_ID, label: 'Tipo de identificación', collection: [['CC', 'Cedula de ciudadania'], ['NIT', 'Nit']], label_method: :second, value_method: :first , required: true%>
  <%= f.input :first_name, label: 'Nombres', error: 'El nombre de la persona es obligatorio', required: true %>
  <%= f.input :last_name, label: 'Apellidos', error: 'Los apellidos son obligatorios', required: true %>
  <%= f.input :username, label: 'Nombre de usuario', error: 'Nombre de usuario es obligatorio', required: true %>
  <%= f.input :password, label: 'Contraseña', hint: 'Sin caracteres especiales.', error: 'Contraseña obligatoria', required: true %>
  <%= f.input :email, placeholder: 'usuario@micorreo.com', type:'email', error: 'El correo electrónico es obligatorio', required: true %>
  <%= f.input :role, label: 'Registrarme como', collection: [['Cultivador', 'Cultivador'] ,['Cliente', 'Cliente']], label_method: :second, value_method: :first , required: true%>
  <%= f.button :submit, "Registrarse" %>
<% end %>
